{
  "expo": {
    "name": "pepper",
    "scheme": "pepper",
    "slug": "pepper",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/brand/pepper-purple-app-icon.png",
    "userInterfaceStyle": "light",
    "packagerOpts": {
      "config": "metro.config.js",
      "sourceExts": [
        "js",
        "jsx",
        "css"
      ]
    },
    "splash": {
      "image": "./assets/brand/pepper-purple-app-icon.png",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.pepper",
      "googleServicesFile": "./server/config/GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/brand/pepper-purple-app-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.anonymous.pepper",
      "googleServicesFile": "./server/config/google-services.json"
    },
    "web": {
      "favicon": "./assets/brand/pepper-purple-app-icon.png"
    },
    "plugins": [
      "@react-native-firebase/app",
      "@react-native-firebase/perf",
      "@react-native-firebase/crashlytics",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ]
    ]
  }
}
